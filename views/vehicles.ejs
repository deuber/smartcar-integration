<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Vehicle Information</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Vehicle Information</h1>
  <table>
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Year</th>
        <th>Odometer (miles)</th>
        <th>Location (Latitude, Longitude)</th>
      </tr>
    </thead>
    <tbody>
      <% vehicles.forEach(vehicle => { %>
        <tr>
          <td><%= vehicle.make %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td><%= (vehicle.odometer * 0.621371).toFixed(2) %></td> <!-- Convert km to miles -->
          <td><%= vehicle.location.latitude %>, <%= vehicle.location.longitude %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
